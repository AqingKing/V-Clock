<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.v_clock.fragment.MeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/fragment_me_title"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/margin_10"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/fragment_me_edit"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="187dp"
        android:layout_height="250dp"
        android:layout_margin="@dimen/margin_10"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_employee_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <ImageButton
            android:id="@+id/imb_change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_photo_camera_black_24dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:text="姓名："
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:text="性别："
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:text="工号："
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:text="手机："
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_employee_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tv_employee_gender"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tv_employee_tel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_40"
        android:background="@drawable/rounded_rectangle_white"
        android:textColor="@color/red"
        android:text="@string/fragment_me_sign_out"/>

</LinearLayout>
