<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/one_message_height"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_guest_avatar"
        android:layout_width="@dimen/one_message_height"
        android:layout_height="match_parent"
        android:src="@drawable/ic_person_pin_circle_48pt_2x"/>
    <TextView
        android:id="@+id/tv_guest_name_in_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/iv_guest_avatar"
        android:text="嘉宾XXX已经到达"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv_arrive_time_in_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.07.05 17.05"
        android:textColor="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>