<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/one_message_height"
    android:padding="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_my_guest_avatar"
        android:layout_width="@dimen/one_message_height"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/ic_person_pin_circle_48pt_2x"/>
    <TextView
        android:layout_marginLeft="@dimen/margin_20"
        android:id="@+id/tv_guest_name_in_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/iv_my_guest_avatar"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv_arrive_time_in_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>