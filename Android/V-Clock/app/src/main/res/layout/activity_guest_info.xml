<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context="com.example.dell.v_clock.activity.GuestInfoActivity">

    <RelativeLayout
        android:id="@+id/relative_guest_info_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/img_bt_info_back"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_guest_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="嘉宾信息"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/act_bar_text_size" />

        <TextView
            android:id="@+id/tv_guest_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_20"
            android:text="@string/edit"
            android:textColor="@drawable/sign_up_selector"
            android:textSize="@dimen/guest_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_guest_info_bar"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0"
            android:layout_weight="4">

            <ImageView
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/height_200"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:background="@color/white">

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:background="@color/white">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:background="@color/white">

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:background="@color/white">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
